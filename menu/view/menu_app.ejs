        this.location = url;
    }
</script>
<script>
    //显示警告
    function ShowWarning() {
        $.ajax({
            type: "get",
            url: '/user_warning_info',


            success: function (data) {
                if (data != null) {
                    data.forEach(function (a) {
                        console.log(a);
                    });

                }



            },
            error: function (data) {
                alert("操作出现错误" + data);
            }
        });
    }
    function ReadUserMenu() {
        $.ajax({
            type: "get",
            url: '/user_menu',


            success: function (data) {
                if (data != null) {
                    data.forEach(function (index_alone) {
                        var a = '<div class="col-xs-6" style="padding:5px">' +
                            ' <a class="button button-big external" style="font-size: 0.65rem">' +
                            ' </a>' +
                            ' </div>';
                        $(a).appendTo("#menu_content").find('.external').text(index_alone.menu_title).attr("href", index_alone.menu_url + "?" + index_alone.menu_id);
                    });
                }



            },
            error: function (data) {
                alert("操作出现错误" + data);
            }
        });
    }
</script>

